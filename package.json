{
  "name": "@nexa/source",
  "description": "Your private, self-sustained digital workspace.",
  "homepage": "https://codyslexia.com/nexa",
  "private": true,
  "author": "Moa Torres",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git",
      "czConfig": "./scripts/commitizen.js"
    }
  },
  "scripts": {
    "all": "pnpm lint && pnpm test && pnpm build",
    "build": "nx run-many --target=build --parallel=3",
    "test": "nx run-many --target=test --parallel=3",
    "lint": "nx run-many --target=lint --parallel=3",
    "commit": "czg",
    "check-commit": "node ./scripts/commit-lint.js",
    "check-format": "nx format:check --all",
    "check-lock-files": "node ./scripts/check-lock-files.js",
    "clean": "rm -rf dist",
    "prepare": "is-ci || husky install",
    "preinstall": "node ./scripts/preinstall.js",
    "local-registry": "nx local-registry @nexa/source"
  },
  "dependencies": {
    "@apollo/gateway": "^2.5.5",
    "@apollo/server": "^4.9.4",
    "@apollo/subgraph": "^2.5.5",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.4.1",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "next": "13.4.1",
    "next-auth": "^4.23.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@apollo/rover": "^0.20.0",
    "@monodon/rust": "^1.2.0",
    "@nx-go/nx-go": "^2.8.0",
    "@nx/cypress": "^16.9.1",
    "@nx/devkit": "^16.9.1",
    "@nx/esbuild": "16.9.1",
    "@nx/eslint-plugin": "16.9.1",
    "@nx/jest": "16.9.1",
    "@nx/js": "16.9.1",
    "@nx/linter": "^16.9.1",
    "@nx/next": "^16.9.1",
    "@nx/node": "^16.9.1",
    "@nx/plugin": "^16.9.1",
    "@nx/react": "^16.9.1",
    "@nx/workspace": "16.9.1",
    "@testing-library/react": "14.0.0",
    "@types/jest": "^29.4.0",
    "@types/node": "18.14.2",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "babel-jest": "^29.4.1",
    "cz-git": "^1.7.1",
    "czg": "^1.7.1",
    "esbuild": "^0.17.17",
    "eslint": "~8.46.0",
    "eslint-config-next": "13.4.1",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "^5.0.0-alpha.2",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "jest-environment-node": "^29.4.1",
    "nx": "16.9.1",
    "nx-cloud": "latest",
